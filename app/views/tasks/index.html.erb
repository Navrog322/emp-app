
<p style="color: green"><%= notice %></p>
<%= content_for(:html_title) { 'Tasks' } %>
<% search_url = controller.action_name != "ghost" ? tasks_path : task_ghost_url%>
<div class="row d-flex justify-content-center">
  <div class="col-10">
    <h1>Tasks</h1>
      <div class="row">
        <div class="col-3">
        <%= form_with(url: search_url, method: :get, class: "form-inline", data: {turbo_frame: "tasks", turbo_action: "advance"}) do |form| %>
        <div class="form-group">
          <%= form.label :name, "Name", style:"display: none;" %>
          <%= form.text_field :name, class: "form-control", autocomplete: "off", placeholder:"Name" %>
        </div>

        <div class="form-group">
          <%= form.label "Is completed?", style:"display: none;" %>
          <%= form.select :is_completed, [["Is completed?", ""], ["Yes", 1], ["No", 0]],{}, class: "form-control" %>
        </div>
      
        <div class="form-group">
          <%= form.label :body, style: "display: none" %>
          <%= form.text_area :body, class: "form-control", placeholder:"Description"  %>
        </div>

        

        <%= form.submit 'Search', class: "btn btn-primary" %>
        <% end %>
        </div>
      </div>


    <%= render partial: "tasks", locals:{tasks:@tasks}%>
       


    <%= link_to "New task", new_task_path %> |
    <% if controller.action_name != "ghost" %>
      <%= link_to "Show deleted tasks", task_ghost_url %>
    <% else %>
      <%= link_to "Back to tasks", tasks_path %>
    <% end %>
  </div>
</div>
