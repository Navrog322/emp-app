<%= content_for(:html_title) { @task.name } %>
  <div class="row d-flex justify-content-center">
    <div class="col-8">
      <p style="color: green"><%= notice %></p>

      <h1><%= "#{@task.name}" %></h1>

      <%= render @task %>

      <div>
        <%= link_to "Edit this task", edit_task_path(@task) %> |
        <%= link_to "Back to tasks", tasks_path %>

        <%= button_to "Delete this task", @task, method: :delete, class:"btn btn-danger" %>
      </div>
  </div>
</div>
