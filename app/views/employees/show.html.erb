<div class="row d-flex justify-content-center">
  <div class="col-10">
    <p style="color: green"><%= notice %></p>

    <%= render @employee %>

    <%if !@employee.subordinates.empty?%>
    <h2>Subordinates</h2>
      <%= render partial:"shared/employees_table", locals:{employees: @employee.subordinates}%>

    <%end%>
    
    <div>
      <%= link_to "Edit this employee", edit_employee_path(@employee) %> |
      <%= link_to "Back to employees", employees_path %>

      <%= button_to "Destroy this employee", @employee, method: :delete %>
    </div>
  </div>
</div>
