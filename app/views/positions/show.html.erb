<%= content_for(:html_title) { @position.name } %>
<div class="row d-flex justify-content-center">
  <div class="col-10">
    <p style="color: green"><%= notice %></p>

    <%= render @position %>
    <%if !@position.employees.empty? %>
    <p><strong>Employees with this position:</strong></p>
      <%= render partial:"shared/employees_table", locals:{employees: @position.employees}%>
    <%end%>
    <div>
      <%= link_to "Edit this position", edit_position_path(@position) %> |
      <%= link_to "Back to positions", positions_path %>
      <% if deletable?(@position) %>
      <%= button_to "Delete this position", @position, method: :delete, class:"btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>
