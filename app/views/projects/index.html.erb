<%= content_for(:html_title) { "Projects" } %>
<div class="row d-flex justify-content-center">
  <div class="col-10">
    <p style="color: green"><%= notice %></p>
    
    <h1 class="title">Projects</h1>

    <% search_url = controller.action_name != "ghost" ? projects_path : project_ghost_url%>
    <div class="row">
      <div class="col-3">

        <%= form_with(url: search_url, method: :get) do |form| %>
        <%= form.label :name, "Project name:", class: "block mb-2" %>
        <%= form.text_field :name, class: "form-control", autocomplete: "off" %>

        <%= form.label :language_id, style: "display: block" %>
        <%= form.select("language_id", @language_choices, {include_blank: true}, { class: "form-control" }) %>

        
        </div>
        <div class="col-3">
          <%= form.label :description, style: "display: block" %>
          <%= form.text_area :body, class:"form-control",  autocomplete: "off" %>

          <%= form.submit 'Search', class: "btn btn-primary search-btn input-field" %>
        </div>
        <% end %>
    </div>
    
    <div id="projects">
      <%= render partial: "shared/projects_table", locals:{projects: @projects}%>
      <%= paginate @projects, window: 2 %> 
    </div>
    
    <%= link_to "New project", new_project_path %> |
    <% if controller.action_name != "ghost" %>
      <%= link_to "Show deleted projects", project_ghost_url %>
    <% else %>
     <%= link_to "Back to projects", projects_path %>
    <% end %>
   
  </div>
</div>
